{
  "manifest_version": 1,
  "name": "CS2/CSGO HLTV 信息插件",
  "version": "5.2.0",
  "description": "开箱即用的CS2数据查询插件，支持比赛、战队、选手数据查询和实时比分",
  "author": {
    "name": "MaiBot Plugin Developer",
    "url": "https://github.com/MaiM-with-u"
  },
  "license": "GPL-v3.0-or-later",
  
  "host_application": {
    "min_version": "0.10.0"
  },
  "homepage_url": "https://github.com/MaiM-with-u/maibot",
  "repository_url": "https://github.com/MaiM-with-u/maibot",
  "keywords": ["cs2", "csgo", "hltv", "esports", "gaming", "counter-strike"],
  "categories": ["Gaming", "Information", "Sports"],
  
  "default_locale": "zh-CN",
  
  "plugin_info": {
    "is_built_in": false,
    "plugin_type": "information_provider",
    "components": [
      {
        "type": "action",
        "name": "hltv_get_matches",
        "description": "获取CS2比赛列表"
      },
      {
        "type": "action",
        "name": "hltv_get_match_detail",
        "description": "获取比赛详情和比分"
      },
      {
        "type": "action",
        "name": "hltv_get_map_stats",
        "description": "获取地图Scoreboard数据"
      },
      {
        "type": "action",
        "name": "hltv_get_results",
        "description": "获取比赛结果"
      },
      {
        "type": "action",
        "name": "hltv_get_rankings",
        "description": "获取战队世界排名"
      },
      {
        "type": "action",
        "name": "hltv_get_team_info",
        "description": "获取战队详细信息"
      },
      {
        "type": "action",
        "name": "hltv_get_live_matches",
        "description": "获取正在进行的比赛"
      },
      {
        "type": "action",
        "name": "hltv_get_live_score",
        "description": "获取实时比分"
      }
    ],
    "features": [
      "开箱即用，无需额外配置",
      "绕过Cloudflare保护获取HLTV数据",
      "比赛列表和详情查询",
      "地图Scoreboard数据（K/D/A/ADR/Rating）",
      "战队排名和选手阵容",
      "实时比赛比分追踪"
    ],
    "python_dependencies": [
      "curl_cffi",
      "beautifulsoup4",
      "lxml"
    ]
  }
}
