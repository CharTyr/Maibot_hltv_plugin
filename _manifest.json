{
  "manifest_version": 1,
  "name": "CS2/CSGO HLTV 信息插件 (CS2/CSGO HLTV Info Plugin)",
  "version": "1.0.0",
  "description": "智能检测CS2/CSGO话题讨论，提供选手数据、比赛信息和实时比赛监控功能",
  "author": {
    "name": "MaiBot Plugin Developer",
    "url": "https://github.com/MaiM-with-u"
  },
  "license": "GPL-v3.0-or-later",
  
  "host_application": {
    "min_version": "0.10.0"
  },
  "homepage_url": "https://github.com/MaiM-with-u/maibot",
  "repository_url": "https://github.com/MaiM-with-u/maibot",
  "keywords": ["cs2", "csgo", "hltv", "esports", "gaming", "counter-strike"],
  "categories": ["Gaming", "Information", "Sports"],
  
  "default_locale": "zh-CN",
  "locales_path": "_locales",
  
  "plugin_info": {
    "is_built_in": false,
    "plugin_type": "information_provider",
    "components": [
      {
        "type": "action",
        "name": "cs2_topic_detection",
        "description": "检测CS2/CSGO相关话题讨论"
      },
      {
        "type": "action", 
        "name": "live_match_monitor",
        "description": "监控进行中的比赛并提供实时数据"
      },
      {
        "type": "tool",
        "name": "get_player_info",
        "description": "获取选手详细信息和统计数据"
      },
      {
        "type": "tool",
        "name": "get_team_info", 
        "description": "获取战队信息和排名"
      },
      {
        "type": "tool",
        "name": "get_match_info",
        "description": "获取比赛信息和结果"
      }
    ],
    "features": [
      "智能CS2/CSGO话题检测",
      "选手数据和统计信息查询",
      "战队排名和成员信息",
      "实时比赛监控和数据推送",
      "比赛结果和历史记录查询",
      "数据缓存和API限流保护"
    ]
  }
}
